<div class="d-flex justify-content-center">
  <h1><strong>Signup page</strong></h1>
</div>
<div class="card row">
  <div class="card-body">
    <form id="signup-form" action="/signup/signup_post" method="post">
      <div class="col-4 offset-4">
        Username: <input id="user" type="text" name="user" class="form-control">
      </div>
      <div class="col-4 offset-4 mt-3">
        Password: <input id="pass1" type="password" name="pass" class="form-control">
      </div>
      <div class="col-4 offset-4 mt-3">
        Re-enter password: <input id="pass2" type="password" class="form-control">
      </div>
    </form>
    <div class="col-4 offset-4 mt-3">
      <%= link_to "Back", login_path, class: "btn btn-primary float-start" %>
      <button id="submit-signup-form" class="btn btn-primary float-end">Signup</button>
    </div>
    <div class="col-4 offset-4 mt-10">
      <p class="col-4 offset-4 mt-3" id="notice"><%= notice %></p>
    </div>
  </div>
</div>


<script>
    $('#submit-signup-form').click(function () {
        var p1 = $('#pass1').val();
        var p2 = $('#pass2').val();
        var user = $('#user').val();
        if (p1 == "" || p2 == "" || user == "") {
            alert("Fill all the blank input");
        } else if (p1 != p2) {
            alert("Password doesn't match");
        } else {
            $('#signup-form').submit();
        }
    });
</script>